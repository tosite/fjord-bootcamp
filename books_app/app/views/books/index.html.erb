<p id="notice"><%= notice %></p>

<h1>Books <%= t('view.hello') %></h1>

<table>
  <thead>
    <tr>
      <th>No</th>
      <th>Title</th>
      <th>Memo</th>
      <th>Author</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each_with_index do |book,i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: t('view.messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @books %>

<br>

<%= link_to 'New Book', new_book_path %>
